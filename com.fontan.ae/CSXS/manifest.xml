<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="9.0" ExtensionBundleId="com.fontan.ae" ExtensionBundleVersion="0.3.0" ExtensionBundleName="FONTAN AE" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="com.fontan.ae.panel" Version="0.3.0"/>
    </ExtensionList>

    <ExecutionEnvironment>
        <HostList>
            <!-- After Effects CC 2019 = 16.0, CC 2020 = 17.0, etc. -->
            <Host Name="AEFT" Version="[16.0,99.9]"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="9.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>

    <DispatchInfoList>
        <Extension Id="com.fontan.ae.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/hostscript.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>FONTAN</Menu>
                    <Geometry>
                        <Size>
                            <Height>620</Height>
                            <Width>420</Width>
                        </Size>
                        <MinSize>
                            <Height>620</Height>
                            <Width>420</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>1200</Height>
                            <Width>800</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./icons/icon-light.png</Icon>
                        <Icon Type="DarkNormal">./icons/icon-dark.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
